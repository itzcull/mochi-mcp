{
  "name": "mochi-mcp",
  "version": "1.0.0",
  "description": "MCP server for Mochi Cards API - manage flashcards, decks, and templates via Model Context Protocol",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "license": "MIT",
  "author": "itzcull",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itzcull/mochi-mcp.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mochi",
    "mochi-cards",
    "flashcards",
    "spaced-repetition",
    "srs",
    "ai",
    "cloudflare-workers"
  ],
  "bin": {
    "mochi-mcp": "src/index.ts"
  },
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "deploy": "wrangler deploy",
    "dev:worker": "wrangler dev",
    "tail": "wrangler tail"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/bun": "latest",
    "wrangler": "^3.99.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
